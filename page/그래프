import streamlit as st
import pandas as pd
import matplotlib.pyplot as plt
import numpy as np

st.title("ğŸ“Š ê·¸ë˜í”„ ì˜ˆì‹œ")

# íƒ­ìœ¼ë¡œ ì—¬ëŸ¬ ê·¸ë˜í”„ í‘œì‹œ
tab1, tab2, tab3 = st.tabs(["ë¼ì¸ ê·¸ë˜í”„", "ë§‰ëŒ€ ê·¸ë˜í”„", "ì‚°ì ë„"])

with tab1:
    st.subheader("ì›”ë³„ íŒë§¤ì•¡ ì¶”ì´")
    # ìƒ˜í”Œ ë°ì´í„°
    months = ['1ì›”', '2ì›”', '3ì›”', '4ì›”', '5ì›”', '6ì›”']
    sales = [10, 24, 36, 18, 45, 38]
    
    fig, ax = plt.subplots(figsize=(10, 5))
    ax.plot(months, sales, marker='o', linewidth=2, markersize=8, color='#1f77b4')
    ax.set_xlabel('ì›”', fontsize=12)
    ax.set_ylabel('íŒë§¤ì•¡ (ë§Œì›)', fontsize=12)
    ax.grid(True, alpha=0.3)
    plt.tight_layout()
    st.pyplot(fig)

with tab2:
    st.subheader("ìƒí’ˆë³„ íŒë§¤ëŸ‰")
    products = ['ìƒí’ˆA', 'ìƒí’ˆB', 'ìƒí’ˆC', 'ìƒí’ˆD', 'ìƒí’ˆE']
    quantities = [50, 85, 75, 60, 95]
    
    fig, ax = plt.subplots(figsize=(10, 5))
    colors = ['#ff7f0e', '#2ca02c', '#d62728', '#9467bd', '#8c564b']
    ax.bar(products, quantities, color=colors)
    ax.set_ylabel('íŒë§¤ëŸ‰ (ê°œ)', fontsize=12)
    ax.grid(True, alpha=0.3, axis='y')
    plt.tight_layout()
    st.pyplot(fig)

with tab3:
    st.subheader("ê´‘ê³ ë¹„ vs ë§¤ì¶œ ìƒê´€ê´€ê³„")
    np.random.seed(42)
    ad_spend = np.random.uniform(100, 500, 50)
    revenue = ad_spend * 2.5 + np.random.normal(0, 100, 50)
    
    fig, ax = plt.subplots(figsize=(10, 5))
    ax.scatter(ad_spend, revenue, alpha=0.6, s=100, color='#17becf')
    ax.set_xlabel('ê´‘ê³ ë¹„ (ë§Œì›)', fontsize=12)
    ax.set_ylabel('ë§¤ì¶œ (ë§Œì›)', fontsize=12)
    ax.grid(True, alpha=0.3)
    plt.tight_layout()
    st.pyplot(fig)

st.divider()
st.write("ğŸ’¡ ì—¬ëŸ¬ ì¢…ë¥˜ì˜ ê·¸ë˜í”„ë¥¼ íƒ­ì—ì„œ í™•ì¸í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤!")
